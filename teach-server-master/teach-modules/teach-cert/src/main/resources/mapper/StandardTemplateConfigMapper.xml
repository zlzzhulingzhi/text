<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.qbs.wa.teach.cert.mapper.StandardTemplateConfigMapper">

    <resultMap type="cn.qbs.wa.teach.cert.entity.StandardTemplateConfig" id="StandardTemplateConfigMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orgId" column="org_id" jdbcType="INTEGER"/>
        <result property="templateId" column="template_id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="keyName" column="key_name" jdbcType="VARCHAR"/>
        <result property="keyValue" column="key_value" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="createBy" column="create_by" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into standard_template_config(org_id, template_id, type, code, key_name, key_value, create_time, create_by)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.orgId}, #{entity.templateId}, #{entity.type}, #{entity.code}, #{entity.keyName}, #{entity.keyValue}, #{entity.createTime}, #{entity.createBy})
        </foreach>
    </insert>

    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into standard_template_config(org_id, template_id, type, code, key_name, key_value, create_time, create_by)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.orgId}, #{entity.templateId}, #{entity.type}, #{entity.code}, #{entity.keyName}, #{entity.keyValue}, #{entity.createTime}, #{entity.createBy})
        </foreach>
        on duplicate key update
        org_id = values(org_id) , template_id = values(template_id) , type = values(type) , code = values(code) , key_name = values(key_name) , key_value = values(key_value) , create_time = values(create_time) , create_by = values(create_by)         $empty
    </insert>

    <select id="page" resultType="cn.qbs.wa.teach.cert.pojo.standardtemplateconfig.StandardTemplateConfigPageResponse">
        select *
        from standard_template_config
        <where>
            <!-- 示例代码，自行修改 -->
            <!--
            <if test="params.name != null and params.name != '' ">
                and name like concat('%', #{params.name}, '%')
            </if>
            -->
        </where>
    </select>

    <select id="selectDetailById" resultType="cn.qbs.wa.teach.cert.pojo.standardtemplateconfig.StandardTemplateConfigDetailResponse">
        select *
        from standard_template_config
        where id = #{id}
    </select>
</mapper>

