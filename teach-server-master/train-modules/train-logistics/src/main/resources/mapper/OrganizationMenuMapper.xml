<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.qbs.wa.train.logistics.mapper.OrganizationMenuMapper">

    <resultMap type="cn.qbs.wa.train.logistics.entity.OrganizationMenu" id="OrganizationMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orgId" column="org_id" jdbcType="INTEGER"/>
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
        <result property="createBy" column="create_by" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into organization_menu(org_id, menu_id, create_by, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.orgId}, #{entity.menuId}, #{entity.createBy}, #{entity.createTime})
        </foreach>
    </insert>

    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into organization_menu(org_id, menu_id, create_by, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.orgId}, #{entity.menuId}, #{entity.createBy}, #{entity.createTime})
        </foreach>
        on duplicate key update
        org_id = values(org_id) , menu_id = values(menu_id) , create_by = values(create_by) , create_time = values(create_time)         $empty
    </insert>

    <select id="page" resultType="cn.qbs.wa.train.logistics.pojo.organizationmenu.OrganizationMenuPageResponse">
        select *
        from organization_menu
        <where>
            <!-- 示例代码，自行修改 -->
            <!--
            <if test="params.name != null and params.name != '' ">
                and name like concat('%', #{params.name}, '%')
            </if>
            -->
        </where>
    </select>

    <select id="selectDetailById" resultType="cn.qbs.wa.train.logistics.pojo.organizationmenu.OrganizationMenuDetailResponse">
        select *
        from organization_menu
        where id = #{id}
    </select>
    <select id="getMenuByRoleIdList"
            resultType="cn.qbs.wa.train.logistics.pojo.organizationmenu.OrganizationMenuVO">
        SELECT DISTINCT
        rm.menu_id as id
        FROM
        organization_role_menu rm
        WHERE
         rm.role_id IN
        <foreach collection="list" index="index" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>


    </select>
    <select id="adminListByOrgId" resultType="cn.qbs.wa.train.logistics.entity.OrganizationMenu">
        select id,menu_id from organization_menu where org_id=#{id}
    </select>
</mapper>

