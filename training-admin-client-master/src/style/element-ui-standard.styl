.el-card
  &.is-always-shadow, &.is-hover-shadow:focus, &.is-hover-shadow:hover
    border none
    border-radius 4px
    box-shadow none

  .el-card__header
    padding 16px
    border-bottom none


  .el-card__body
    padding 0 16px

  &.body-32
    .el-card__body
      padding: 0 32px

.el-message-box
  &.dark
    background-color #30323D
    border-color #30323D
    color #959A9F

    .el-message-box__header
      padding 24px

    .el-message-box__title
      color #959A9F
      font-size 16px

    .el-message-box__content
      padding 8px 24px 16px
      color #959A9F

    .el-message-box__btns
      padding 0 24px 14px 0

    .el-button
      width 80px
      height 36px
      background-color #404352
      border-color #404352
      color #959A9F
      font-size 13px

      & + .el-button
        margin-left 16px

      &.el-button--primary
        background-color #1D61F2
        color #FFF