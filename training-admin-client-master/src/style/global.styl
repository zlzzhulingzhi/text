@import "element-ui-standard.styl"
@import "style-color-standard.styl"
/**
* 本地化全局样式 写这里
* style-color 样式补充 写这里
* 预备新增的全局样式、element-ui-standard 样式、style-color 写这里
* 避免污染 全部项目标准库
*/

// 图片缩小时模糊问题 处理
img
  backface-visibility hidden

.rich-text
  p
    margin-top 0 !important
    margin-bottom 0 !important

  img
    max-width 100%

/*[全局UI更变]-所有table里面的text按钮，去掉icon，如果需要icon,则使用.show-icon类名。实现时，都加上icon*/
.el-table
  .el-button--text
    &.show-icon
      i
        display inline-block

    i
      display none

// 隐藏文本 - 2行
.text-ellipsis-2
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical

// 隐藏文本 - 3行
.text-ellipsis-3
  display -webkit-box
  -webkit-line-clamp 3
  -webkit-box-orient vertical

.shrink-0
  flex-shrink 0

.linear-gradient-box
  position absolute
  top 0
  left 0
  font-size 12px
  border-radius 4px 0 4px 0
  line-height 28px
  width 56px
  text-align center
  color NEUTRAL_COLOR_F

  &.type-live
    background-image linear-gradient(90deg, #FFBE26 0%, #F87220 100%)

  &.type-record
    background-image linear-gradient(90deg, #00D2FC 0%, #0A89FF 100%)

  &.type-mix
    background-image linear-gradient(133deg, #955CFF 0%, #7029FF 100%)

// 图标 - 点
.dot
  width 6px
  height 6px
  border-radius 6px
  margin-right 4px
  display inline-block
  vertical-align middle
  line-height 6px
  font-size 6px
  margin-bottom 2px

.height-100p
  height 100%

.width-1366
  width 1366px

.break-all
  word-break break-all

textarea, input
  font-family inherit

::placeholder
  color NEUTRAL_COLOR_9 !important
  font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif


.el-form
  .el-input
    .el-input__inner, .el-input__icon
      display inline-block

.el-select__caret.el-icon-arrow-up:before
  content "\e78f"

.el-button--small
  padding-left 12px
  padding-right 12px

.el-button--text
  padding-left 0
  padding-right 0

.el-input-number.is-controls-right

  .el-input-number__decrease, .el-input-number__increase
    background-color transparent
    border none

  .el-icon-arrow-up:before
    content "\e78f"

  .el-icon-arrow-down:before
    content "\e790"

.el-input__inner[maxlength]
  padding-right 40px

.width-300
  > .el-input__inner[maxlength]
    padding-right 75px

.el-input__inner[maxlength='100']
  padding-right 75px

[class].el-tooltip__popper.is-light
  border 1px solid #efefef
  box-shadow 0 2px 12px 0 rgba(0, 0, 0, .1)

  &[x-placement^=top] .popper__arrow
    border-top-color #efefef

  &[x-placement^=bottom] .popper__arrow
    border-bottom-color #efefef

  &[x-placement^=left] .popper__arrow
    border-left-color #efefef

  &[x-placement^=right] .popper__arrow
    border-right-color #efefef

.el-checkbox-group
  .el-checkbox
    margin-right 8px
    padding-right 8px

.el-switch
  height 16px
  line-height 16px

  &.is-checked
    .el-switch__core
      //background-color SHADOW_COLOR
      //border-color SHADOW_COLOR
      background-color MAIN_COLOR
      border-color MAIN_COLOR

      &:after
        left 100%
        margin-left -10px
        background-color NEUTRAL_COLOR_F

  //background-color MAIN_COLOR

  .el-switch__core
    height 12px
    background-color NEUTRAL_COLOR_C
    border-color NEUTRAL_COLOR_C

    &:after
      top 0
      left 0
      width 10px
      height 10px

  //background-color NEUTRAL_COLOR_95

  .el-switch__label
    height 16px
    margin-left 6px
    color ERROR_COLOR
    user-select none

    &.is-active
      color MAIN_COLOR

.vue-treeselect
  font-size 14px
  line-height 30px

  &.line-height-34
    line-height 34px

  .vue-treeselect__control
    height 30px
    font-size 13px
    padding-left 10px

    .vue-treeselect__placeholder
      line-height 32px
      color NEUTRAL_COLOR_9

  .vue-treeselect__x
    width 6px
    height 6px
    padding 2px
    border 1px solid #ccc
    border-radius 6px

  .vue-treeselect__x-container:hover
    color #ccc

  .vue-treeselect__multi-value
    margin-bottom 0
    line-height 14px

    .vue-treeselect__multi-value-item-container
      padding-top 2px

    .vue-treeselect__limit-tip
      padding-top 2px
      line-height 14px

    .vue-treeselect__input-container
      padding-top 2px

.tree-style-main
  .is-current
    background-color NEUTRAL_COLOR_F

    > .el-tree-node__content
      background-color BACKGROUND_COLOR
      color MAIN_COLOR

      .el-icon-folder-opened:before
        color MAIN_COLOR
        font-weight 600

  > .el-tree-node
    .el-tree-node__content
      height 44px !important

      &:hover
        background-color BACKGROUND_COLOR

.button-input-style-column
  position relative

  .el-checkbox-button
    display block
    line-height 24px

    .el-checkbox-button__inner
      width 100%
      padding 0
      line-height 24px
      border-radius 4px 4px 0 0
      overflow hidden

  .el-input-number.is-controls-right
    display block
    width 100%
    line-height 24px
    top -1px

    > span
      width 24px
      line-height 12px
      //background-color BACKGROUND_COLOR

      &.is-disabled
        background-color #f8fafc

    .el-input__inner
      padding-right 32px
      padding-left 4px
      border-radius 0 0 4px 4px
      border-top none
      height 24px
      line-height 24px

      &::placeholder
        font-size 12px

    &.is-disabled
      > span
        background-color #f8fafc

.el-breadcrumb__item:last-child .el-breadcrumb__inner
  color MAIN_COLOR

  .cell {
      display: none;
      }



